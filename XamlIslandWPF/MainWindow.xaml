<Window
    x:Class="XamlIslandWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:XamlIslandWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wc="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
    Title="MainWindow"
    Width="800"
    Height="450"
    Background="Black"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Style>
        <Style TargetType="Window">
            <Style.Setters>
                <Setter Property="Margin" Value="0,0,-4,0" />
                <Setter Property="wc:WindowChrome.WindowChrome">
                    <Setter.Value>
                        <wc:WindowChrome
                            CaptionHeight="23"
                            GlassFrameThickness="-1"
                            NonClientFrameEdges="Right"
                            ResizeBorderThickness="7"
                            UseAeroCaptionButtons="True" />
                    </Setter.Value>
                </Setter>
                <Setter Property="Background" Value="Black" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Window">
                            <Border>
                                <Grid Background="{DynamicResource {TemplateBinding Background}}">
                                    <!--  Window Content  -->
                                    <ContentPresenter />
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
        </Style>
    </Window.Style>
    <Grid>
        <StackPanel
            Height="34"
            Margin="0,0,150,0"
            VerticalAlignment="Top"
            Background="Transparent"
            Orientation="Horizontal">
            <Button
                Margin="20,0"
                Background="Transparent"
                BorderBrush="Transparent"
                Content="Button"
                WindowChrome.IsHitTestVisibleInChrome="True" />
        </StackPanel>
        <Grid Margin="0,34,4,0" Background="Transparent">
            <Border
                x:Name="IslandContentBorder"
                Margin="7,0,7,7"
                d:Background="DimGray" />
        </Grid>
    </Grid>
</Window>
